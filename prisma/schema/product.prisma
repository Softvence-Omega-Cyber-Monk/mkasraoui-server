model Product {
  id           String     @id @default(uuid())
  title        String
  description  String
  product_type ProductType @default(DIY_BOX)
  age_range    String
  price        Float
  discounted_price Float?
  included     String[]
  tutorial     String?
  imges        String[]
  activities   Activity[]
  avg_rating Float @default(0)
  reviews ProductReview[]
  total_review Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  theme Theme @default(SUPERHERO) 

  category DIY_Category @default(DIY_BOX)
  
  up_to_kids Int?
  OrderItem OrderItem[]
  favorite Favorite[]
}

model Activity {
  id          String   @id @default(uuid())
  title       String
  description String
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
}


enum ProductType {
  DIY_BOX
}


model DIY_activity {
  id String @id @default(uuid())
  title String?
  description String?
  video String?
  pdfFile  String?
  material  String?
  instruction_sheet String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  total_review Int @default(0)
  avg_rating Float @default(0)
  activityReview ActivityReview[]
}

enum DIY_Category {
  DIY_BOX
  BIRTHDAY_DECORATIONS
  GENERAL_CRAFTS
}

enum Theme {
  SUPERHERO
  SPACE
  ART
  SCIENCE
  MUSIC
  SPORTS
  PRINCESS
  DINOSAUR 
  UNICORNS
  PIRATES
  JUNGLE
  HOLIDAY
  CELEBRATION 
}

