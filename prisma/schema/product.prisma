model Product {
  id           String     @id @default(uuid())
  title        String
  description  String
  product_type String
  age_range    String
  price        Float
  included     String[]
  tutorial     String?
  imges        String[]
  activities   Activity[]
  avg_rating Float @default(0)
  reviews ProductReview[]
  total_review Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  CartItem CartItem[]

  OrderItem OrderItem[]
}

model Activity {
  id          String   @id @default(uuid())
  title       String
  description String
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
}
