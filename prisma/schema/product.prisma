model Product {
  id           String     @id @default(uuid())
  title        String
  description  String
  product_type ProductType @default(GIFT)
  age_range    String
  price        Float
  included     String[]
  tutorial     String?
  imges        String[]
  activities   Activity[]
  avg_rating Float @default(0)
  reviews ProductReview[]
  total_review Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  theme String @default("SUPERHERO")
  CartItem CartItem[]
  up_to_kids Int?
  OrderItem OrderItem[]
  favorite Favorite[]
}

model Activity {
  id          String   @id @default(uuid())
  title       String
  description String
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
}

enum ProductType {
  GIFT
  DIY_BOX
}

enum Theme {
 SUPERHERO
  SPACE
  ART
  SCIENCE
  MUSIC
  SPORTS
  PRINCESS
  DIONSOUR
  UNICORNS
  PIRATES
}