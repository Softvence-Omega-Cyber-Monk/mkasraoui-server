model CustomOrder {
  id        String      @id @default(uuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])

  tShirtType    TShirtType 



  total     Float
  paymentIntentId  String?        // Stripe payment ID
  status    OrderStatus @default(PENDING)
  
  // Additional info
  shippingAddress String?          // Address for delivery
  contactName     String?          // Name to receive delivery
  contactPhone    String?          // Phone for delivery
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}


enum TShirtType {
    CHILD
    ADULT
}

