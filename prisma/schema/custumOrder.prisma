model CustomOrder {
  id        String      @id @default(uuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])

  tShirtType    TShirtType 
  size      String
  gender    Gender
  color     String
  theme     Theme?
  name      String
  age       String
  optionalMessage  String?
  quantity   Int
  designUrl    String?
  mockupUrl    String?
  total     Float
  paymentIntentId  String?     
  status    OrderStatus @default(PENDING)
  
  address String?          // Address for delivery
  zipCode  String?
  state   String?
  city    String?       
  contactName     String?          
  contactPhone    String?  

  gelatoOrderId   String?
  gelatoStatus    String?       
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}


enum TShirtType {
    CHILD
    ADULT
}


enum Gender {
    MALE
    FEMALE
    BOY
    GIRL
}
