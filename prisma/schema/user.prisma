
model User{
  id String @id @default(uuid())
  name String?
  email String @unique
  phone String?
  password String
  isDeleted Boolean @default(false)
  role     Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  parties_planed Float @default(0)
  invitation_send Int @default(0)
  confirm_inviation Int @default(0)
  confirmation_token String?
  address   String?
  providerProfile ProviderProfile?
  reviews ProductReview[]
  provider_reviews ProviderReview[]
  invitation Invitation[]
  Quote Quote[]
  favorite Favorite[]
  Order Order[]
  subscription Subscription[]
  blog Blog[]
  task Task[]
  PartyPlan PartyPlan[]
  userConversations Conversation[] @relation("UserConversations")

  providerConversations Conversation[] @relation("ProviderConversations")

  Message Message[]
  stripe_customer_id String?
  profile_image String?

  CustomOrder CustomOrder[]
}


model ProviderProfile{
   id String @id @default(uuid())
   userId  String  @unique
   user User @relation(fields: [userId],references: [id])
   bussinessName  String
   email  String
   contactName  String
   phone   String
   serviceCategory ServiceCategory[]
   serviceArea  String
   latitude  Float
   longitude  Float
   description String
   priceRange  String
   website    String?
   instagram  String?
   portfolioImages  String[]
   isApproved   Boolean @default(false)
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
   avg_ratting Float @default(0)
   total_review Int @default(0)
   reviews ProviderReview[]
   Quote Quote[]
}

enum ServiceCategory {
  VENUE_SPACES
  FOOD_CATERING
  CAKES_DESSERTS
  BALLOON_DECOR
  FLORAL_DECOR
  LIGHTING_SETUP
  DJs_BANDS
  MAGICIANS
  PHOTOGRAPHY
  VIDEOGRAPHY
  PHOTO_BOOTH
  PARTY_SUPPLIES
  SOUND_SYSTEM
  INVITATIONS
  RETURN_GIFTS
  HOSTS_ANCHORS
  KIDS_ENTERTAINMENT
  PREMIUM_LUXURY
}



enum Role {
  ADMIN
  PROVIDER
  USER
}